<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoriesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:background="@drawable/all"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tx_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:layout_marginLeft="20dp"
            android:text="All Products"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cat_view_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/input_design"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="40dp"
            android:text="View"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:layout_marginTop="132dp"
        android:background="@drawable/veg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tx_vegitables"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:layout_marginLeft="20dp"
            android:text="Vegitables"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cat_view_vegi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/input_design"
            android:layout_marginLeft="156dp"
            android:layout_marginTop="40dp"
            android:text="View"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:layout_marginTop="264dp"
        android:background="@drawable/fruitsh"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tx_fruits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:layout_marginLeft="20dp"
            android:text="Fruits"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cat_view_fruits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/input_design"
            android:layout_marginLeft="215dp"
            android:layout_marginTop="40dp"
            android:text="View"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:layout_marginTop="394dp"
        android:background="@drawable/plant"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tx_plants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:layout_marginLeft="20dp"
            android:text="Seeds and Plants"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cat_view_plants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/input_design"
            android:layout_marginLeft="84dp"
            android:layout_marginTop="40dp"
            android:text="View"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:layout_marginTop="526dp"
        android:background="@drawable/eq"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tx_equipments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:layout_marginLeft="20dp"
            android:text="Equipments"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cat_view_eq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/input_design"
            android:layout_marginLeft="146dp"
            android:layout_marginTop="40dp"
            android:text="View"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </LinearLayout>

</FrameLayout>